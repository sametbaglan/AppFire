@model AllLayoutViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <header class="page-header">
    </header>
    <div class="col-lg-6 col-md-6">
        <form asp-controller="Employees" asp-action="Update" name="formadd" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"> Ad</label>
                        <input id="productName" class="form-control" type="text" asp-for="employees.Name" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Soyad</label>
                        <input id="unitPrice" class="form-control" asp-for="employees.Surname" required />
                    </div>
                        <div class="form-group">
                        <label class="control-label" for="form-control-3">Maaş</label>
                        <input id="unitPrice" class="form-control" type="text" asp-for="employees.Salary" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">İşe Başlama Tarihi</label>
                        <input id="unitPrice" class="form-control" type="date" asp-for="employees.CreatedDate" disabled="disabled" />
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" id="btn1" class=" center-block btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

