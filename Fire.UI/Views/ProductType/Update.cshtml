@model AllLayoutViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <header class="page-header">
    </header>
    <hr />
    <div class="col-lg-6 col-md-6">
        <form asp-controller="ProductType" asp-action="Update" name="formadd" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"> Ürün</label>
                        <input id="productName" class="form-control" type="text" asp-for="ProductType.Name" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Fiyat</label>
                        <input id="unitPrice" class="form-control" asp-for="ProductType.kgPrice" required />
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" id="btn1" class=" center-block btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


