@model AllLayoutViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <header class="page-header">
        @if (ViewBag.error != null)
        {
            <div class="alert-danger">@ViewBag.error</div>
        }
    </header>
    <div class="col-lg-6 col-md-6">
        <form asp-controller="Check" asp-action="Add" name="formadd" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"> Çek Numarası</label>
                        <input id="productName" class="form-control" type="text" asp-for="check.checkNumber" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Banka</label>
                        @Html.DropDownListFor(x=>x.bank.id,(List<SelectListItem>)ViewBag.banklist,"Seç",new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Miktarı</label>
                        <input id="unitPrice" class="form-control" asp-for="check.price" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Ödeme Tarihi</label>
                        <input id="unitPrice" type="date" class="form-control" asp-for="check.checkDate" required />
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" id="btn1" class=" center-block btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>